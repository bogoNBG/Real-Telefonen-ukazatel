<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d" FontSize="16"
        Title="MainWindow" Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="tbInput" Text="{Binding TxtInput}" Height="40"/>
        <Button x:Name="btnAdd" Content="Add" Click="btnAdd_Click" Grid.Column="1" Width="50" Height="40" Margin="0,0,0,0" HorizontalAlignment="Left"/>
        <Button x:Name="btnDelete" Content="Del" Click="btnDelete_Click" Grid.Column="1" Width="50" Height="40" Margin="60,0,0,0" HorizontalAlignment="Left"/>
        <Button x:Name="btnClear" Content="Clear" Click="btnClear_Click" Grid.Column="1" Width="50" Height="40" Margin="120,0,0,0" HorizontalAlignment="Left"/>
        <ListView x:Name="lvEntries" Grid.Row="1" Grid.ColumnSpan="2" ItemsSource="{Binding Entries}"/>
    </Grid>
</Window>
